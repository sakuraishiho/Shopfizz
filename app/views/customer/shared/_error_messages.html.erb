<% if resource.errors.any? %>
  <div class="bg-orange-100 border-l-4 border-orange-500 text-orange-700 p-4 mb-5" role="alert">
    <p class="font-bold">
      <%= I18n.t("activerecord.errors.messages.not_saved",
                 count: resource.errors.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </p>
    <ul>
      <% resource.errors.messages.values.flatten.uniq.each do |message| %>
        <li><%= message.gsub(/^[^ ]+\s/, '') %></li> <!-- フィールド名を削除してメッセージのみ表示 -->
      <% end %>
    </ul>
  </div>
<% end %>
